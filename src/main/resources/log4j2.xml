<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <!-- 變量配置 -->
    <Properties>
        <Property name="basedir">/syslog/SpringBootTest/</Property>
        <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss}[%p][%C{1}] %m%n</Property>
    </Properties>
    <!-- appender配置 -->
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>
        <RollingFile name="SpringBootTest"
                     filePattern="${basedir}/SpringBootTest.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DirectWriteRolloverStrategy/>
        </RollingFile>
        <RollingFile name="rmds"
                     filePattern="${basedir}/rmds.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DirectWriteRolloverStrategy/>
        </RollingFile>
        <Socket name="socket" host="10.77.249.230" port="20002" reconnectionDelay="5000" immediateFlush="true" writeHeader="true">
            <JsonLayout compact="true" includeStacktrace="true" charset="UTF-8" eventEol="true" locationInfo="true" objectMessageAsJsonObject="true" stacktraceAsString="true">
                <KeyValuePair key="hostName" value="$${hostName}" />
            </JsonLayout>
        </Socket>
    </Appenders>
    <Loggers>
        <Logger name="SpringBootTest" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="SpringBootTest"/>
            <AppenderRef ref="socket"/>
        </Logger>
        <Logger name="com.alibaba.druid.pool" level="info" additivity="false">
            <AppenderRef ref="rmds"/>
        </Logger>
    </Loggers>
</Configuration>